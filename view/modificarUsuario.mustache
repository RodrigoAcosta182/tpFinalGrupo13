<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="/tpFinalGrupo13/public/css/formStyle.css">
<div class="w3-card-4"  style="width:40%;margin: auto">

        <header class="w3-container w3-teal">
            <h3 class="w3-center">Modificar usuario</h3>
        </header>
            {{#usuario}}
            <form action="procesoModificarUsuario" autocomplete="off">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" placeholder="Tu nombre.." value="{{Nombre}}">

                <label for="apellido">Apellido</label>
                <input type="text" id="apellido" name="apellido" placeholder="Tu apellido.." value="{{Apellido}}">

                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Tu email.." value="{{Email}}">

                <label for="contrasenia">Contraseña</label>
                <input type="password" id="contrasenia" name="contrasenia" placeholder="Tu contraseña..">
                <div class="w3-row" style="background-color: #181818">
                    <label>Roles</label> <br>
                    <input class="w3-radio" type="radio" name="rol" id="admin"  value="1">
                    <label for="admin">Administrador</label><br>
                    <input class="w3-radio" type="radio" name="rol" id="super" value="2">
                    <label for="super">Supervisor</label><br>
                    <input class="w3-radio" type="radio" name="rol" id="chofer" value="3">
                    <label for="chofer">Chofer</label><br>
                    <input class="w3-radio" type="radio" name="rol" id="llano" value="4">
                    <label for="llano">Llano</label><br>
                    <input class="w3-radio" type="radio" name="rol" id="encargado" value="5">
                    <label for="encargado">Encargado de taller</label><br>
                </div>
                <label> Licencias</label><br>
                <select name="licencias" id="">
                    <option value="">Class 1</option>
                    <option value="">Class 2</option>
                    <option value="">Class 3</option>
                    <option value="">Class 4.1</option>
                    <option value="">Class 4.2</option>
                    <option value="">Class 4.3</option>
                    <option value="">Class 5.1</option>
                    <option value="">Class 5.2</option>
                    <option value="">Class 6.1</option>
                    <option value="">Class 6.2</option>
                    <option value="">Class 7</option>
                    <option value="">Class 8</option>
                    <option value="">Class 9</option>
                </select>
                <br><input type="checkbox" id="active" name="active" {{#Active}}checked="checked"{{/Active}}>
                <label for="active">Activo</label><br>
                <br>
                <button class="w3-green w3-button" style="width: 100%">Guardar</button>
                <a type="button" class="button button4 w3-center" style="text-decoration: none" href="/tpFinalGrupo13/usuario">Volver</a>
            </form>
            {{/usuario}}
    </div>
</body>
</html>