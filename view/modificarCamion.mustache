<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="/tpFinalGrupo13/public/css/formStyle.css">
    <div class="w3-card-4"  style="width:40%;margin: auto">
        <header class="w3-container w3-teal">
            <h3 class="w3-center">Modificar camion</h3>
        </header>
        {{#camion}}
            <form action="procesoModificarCamion" method="post">
                <input type="hidden" name="idCamion"  value="{{Id_camion}}">

                <label> Marca</label><br>
                <select name="marca" id="">
                    <option value="{{Id_marca}}" style="color: teal" >{{ Marca }}</option>
                    <option value="1">Iveco</option>
                    <option value="2">Scania</option>
                    <option value="3">Mercedes Benz</option>
                </select>
                <label> Modelo</label><br>
                <select name="modelo" id="">
                    <option value="{{Id_modelo}}" style="color: teal" >{{Modelo}}</option>
                    <option value="1">Daily</option>
                    <option value="2">Eurostar</option>
                    <option value="3">G310</option>
                    <option value="4">G460</option>
                    <option value="5">Actros 1846</option>
                    <option value="6">Axor</option>
                </select>
                <label for="lpatente">Patente</label>
                <input type="text" id="lpatente" name="patente" placeholder="Tu patente.." value="{{Patente}}">
                <label for="lchasis">Nro chasis</label>
                <input type="text" id="lchasis" name="chasis" placeholder="Nro chasis.." value="{{Chasis}}">
                <label for="lmotor">Nro motor</label>
                <input type="text" id="lmotor" name="motor" placeholder="Nro motor.." value="{{Motor}}">
                <label> Tipo de arrastre</label><br>
                <select name="arrastre">
                    <option value="{{Id_arrastre}}" style="color: teal">{{Arrastre}}</option>
                    <option value="1">Araña</option>
                    <option value="2">Jaula</option>
                    <option value="2">Tanque</option>
                    <option value="2">Granel</option>
                </select>
                <div class="w3-row" style="background-color: #181818">
                    <div class="w3-col s4 w3-center" style="background-color: #181818" >
                        <label for="lkm">Kilometraje</label><br>
                        <input type="number" id="lkm" name="kilometraje" placeholder="Kilometraje del vehiculo.." value="{{Km}}">
                    </div>
                    <div class="w3-col s4 w3-center" style="background-color: #181818">
                        <label for="lfabri">Año de fabricacion</label> <br>
                        <input type="date" id="lfabri" name="fabricacion" placeholder="Año de fabricacion.." value="{{aFab}}">
                    </div>
                    <div class="w3-col s4 w3-center" style="background-color: #181818">
                        <br>
                        <input type="checkbox" id="activo" name="activo" {{#Activo}}checked="checked"{{/Activo}}>
                        <label for="activo">Activo</label>
                    </div>
                </div>

                <input type="submit" value="Guardar">
                <a type="button" class="button button4 w3-center" style="text-decoration: none" href="/tpFinalGrupo13/camion">Volver</a>
            </form>
        {{/camion}}
    </div>
</body>
</html>