
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="/tpFinalGrupo13/public/css/formStyle.css">


    <div class="w3-card-4"  style="width:40%;margin: auto">
        <header class="w3-container w3-teal">
            <h3 class="w3-center">Modificar camion</h3>
        </header>
        {{#camion}}
            <form action="procesoModificarCamion" method="get" autocomplete="off">
                <input type="hidden" name="id"  value="{{Id_camion}}" placeholder="{{Id_camion}}">
                <label> Marca</label><br>
                <select name="marca" id="">
                    <option selected  value="{{Id_marca}}" disabled style="color: teal">{{Marca}}</option>
                    <option value="1">IVECO</option>
                    <option value="2">Scania</option>
                    <option value="3">Mercedes Benz</option>
                </select>
                <label> Modelo</label><br>
                <select name="modelo" id="">
                    <option selected  value="{{Id_modelo}}" disabled style="color: teal">{{Modelo}}</option>
                    <option value="1">Daily</option>
                    <option value="2">Eurostar</option>
                    <option value="3">G310</option>
                    <option value="4">G460</option>
                    <option value="5">Actros 1846</option>
                    <option value="6">Axor</option>
                </select>

                <label for="fname">Patente</label>
                <input type="text" id="fname" name="patente" placeholder="Tu patente.." value="{{Patente}}">

                <label for="lname">Nro chasis</label>
                <input type="text" id="lname" name="chasis" placeholder="Nro chasis.." value="{{Chasis}}">

                <label for="lname">Nro motor</label>
                <input type="text" id="lname" name="motor" placeholder="Nro motor.." value="{{Motor}}">

                <label> Tipo de acoplado</label><br>
                <select name="arrastre" id="">
                    <option selected  value="{{Id_arrastre}}" disabled style="color: teal">{{Arrastre}}</option>
                    <option value="1">Araña</option>
                    <option value="2">Jaula</option>
                    <option value="3">Tanque</option>
                    <option value="4">Granel</option>
                </select>

                <label for="lname">Kilometraje</label><br>
                <input type="number" id="lname" name="km" placeholder="Kilometraje del vehiculo.." value="{{Km}}"> <br>

                <label for="lname">Año de fabricacion</label><br>
                <input type="date" id="lname" name="aniofab" placeholder="Año de fabricacion.."value="{{aFab}}" ><br>


                <br><input type="checkbox" id="active" name="active" {{#Activo}}checked="checked"{{/Activo}}>
                <label for="active">Activo</label><br>
                <br>
                <input type="submit" value="Guardar">
                <a type="button" class="button button4 w3-center" style="text-decoration: none" href="/tpFinalGrupo13/camion">Volver</a>
            </form>
        {{/camion}}
    </div>


</body>
</html>