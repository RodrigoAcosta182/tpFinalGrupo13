    <div class="w3-card-4"  style="width:40%;margin: auto; margin-top: 100px">
        <header class="w3-container w3-teal">
            <h3 class="w3-center">Nuevo Mantenimiento</h3>
        </header>
            <form action="registrarMantenimiento" method="post">

                <label> Tipo de servicio*</label><br>
                <select name="service" id="" required>
                    <option value="1">Taller externo </option>
                    <option value="2">Taller interno</option>
                </select>

                <label for="importe" >Importe*</label><br>
                <input class="numberInput" type="number" id="importe" name="importe" placeholder="Importe.." required><br><br>

                <label for="lname">Descripcion del service*</label><br>
                <textarea class="textAreaInput" style="height: 120px" name="descripcion" id="" cols="25" rows="1" placeholder="Ingrese detalle del service" required></textarea><br><br>


                <label for="fdesde">Fecha desde*</label><br>
                <input class="dateInput" type="date" id="fdesde" name="fdesde"required><br><br>

                <label for="fechaHasta">Fecha hasta*</label><br>
                <input class="dateInput" type="date" id="fechaHasta" name="fhasta"required><br><br>

                <label> Vehiculo*</label><br>
                <select name="vehiculo" id=""required>
                    <option value="">Seleccione patente del vehiculo</option>
                    <option value="3">AA123CD</option>
                    <option value="4">AA150QW</option>
                    <option value="5">AD870QW</option>
                    <option value="6">AC342WW</option>
                </select>
                <br>
                <input type="submit" value="Guardar">
                <a type="button" class="button button4 w3-center" style="text-decoration: none" href="/tpFinalGrupo13/mantenimiento">Volver</a>
            </form>

        </div>


</body>
</html>