
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="/tpFinalGrupo13/public/css/formStyle.css">

<div class="w3-card-4"  style="width:40%;margin: auto">
    <header class="w3-container w3-teal">
        <h3 class="w3-center">Nuevo Viaje</h3>
    </header>
    <form action="registrarViaje" method="post">
        <input type="hidden" name="id">
            <label>Usuario</label><br>
            <select name="usuario" id="">
        {{#viaje}}
                <option value="{{Id}}">{{Nombre}} {{Apellido}}</option>
        {{/viaje}}
            </select>



        <label>Sucursal Origen</label><br>
        <select name="sucOrig" id="">
            <option value="1">Bolivia </option>
            <option value="2">Taller interno</option>
        </select>

        <label>Sucursal Destino</label><br>
        <select name="sucDest" id="">
            <option value="1">Peru</option>
            <option value="2">Taller interno</option>
        </select>

        <label>Cliente</label><br>
        <select name="cliente" id="">
            <option value="1">Taller externo </option>
            <option value="2">Taller interno</option>
        </select>

        <label>Vehiculo</label><br>
        <select name="vehiculo" id="">
            <option value="1">Taller externo </option>
            <option value="2">Taller interno</option>
        </select>

        <label>Arrastre</label><br>
        <select name="arrastre" id="">
            <option value="1">Taller externo </option>
            <option value="2">Taller interno</option>
        </select>

        <label for="lname">Fecha Origen</label><br><br>
        <input type="date" id="lname" name="fechaOrig"><br><br>

        <label for="lname">Fecha Estimada</label><br><br>
        <input type="date" id="lname" name="fechaEst"><br><br>

        <label for="fname">Kilometraje Estimado</label><br><br>
        <input type="number" id="fname" name="kmEst" placeholder="Km.."><br><br>

        <label for="fname">Combustible Estimado</label><br><br>
        <input type="number" id="fname" name="combEst" placeholder="Combustible.."><br><br>

        <label for="fname">Precio</label><br><br>
        <input type="number" id="fname" name="precio" placeholder="Precio.."><br><br>

        <br>
        <input type="submit" value="Guardar">
        <a type="button" class="button button4 w3-center" style="text-decoration: none" href="/tpFinalGrupo13/viaje">Volver</a>
    </form>

</div>


</body>
</html>