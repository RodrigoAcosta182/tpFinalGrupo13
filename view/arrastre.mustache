{{> header}}
{{> navbar}}
<!-- !PAGE CONTENT! -->
<div class="w3-main w3-container">
    <!-- Header -->
    <div id="portfolio">
        <span class="w3-button w3-hide-large w3-xxlarge w3-hover-text-grey" onclick="w3_open()"><i class="fa fa-bars"></i></span>
        <div class="w3-container w3-center">
            <img src="/tpFinalGrupo13/public/images/logoLema.jpeg" style="width:20%;" class="w3-center w3-round">
            <!-- The form -->
            <div class="w3-section w3-bottombar w3-padding-16">
                <input class="w3-padding w3-light-grey w3-border-blue" style="width: 30%" type="text" id="myInput" onkeyup="myFunction()" placeholder="Buscar Arrastre.." name="busqueda">
            </div>
            {{#_SESSION.esAdministrador}}
                <a href="/tpfinalgrupo13/Arrastre/AltaArrastre" style="width: auto; margin-bottom: 20px" type="submit" class="w3-green w3-button">Agregar Arrastre</a>
            {{/_SESSION.esAdministrador}}
            {{#_SESSION.esSupervisor}}
                <a href="/tpfinalgrupo13/Arrastre/AltaArrastre" style="width: auto; margin-bottom: 20px" type="submit" class="w3-green w3-button">Agregar Arrastre</a>
            {{/_SESSION.esSupervisor}}
            <br>
        </div>
    </div>
    <div style="overflow: auto;">
        <table class="w3-table">
            <tr class="w3-black">
                <th>Patente</th>
                <th>Nro. Chasis</th>
                <th>Descripcion</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>

            {{#arrastre}}
                <tr class="w3-border-bottom w3-light-grey">
                    <td>{{Patente}}</td>
                    <td>{{NroChasis}}</td>
                    <td>{{Descripcion}}</td>
                    <td>{{Activo}}</td>
                    <td class="w3-center">
                        <div>
                            {{#_SESSION.esAdministrador}}
                            <form action="arrastre/modificarArrastre" method="post">
                                <button class='w3-button w3-blue' style="width: 50%;" name="idArrastre" value="{{Id}}">Modificar</button>
                            </form>
                            {{/_SESSION.esAdministrador}}
                            {{#_SESSION.esSupervisor}}
                                <form action="arrastre/modificarArrastre" method="post">
                                    <button class='w3-button w3-blue' style="width: 50%;" name="idArrastre" value="{{Id}}">Modificar</button>
                                </form>
                            {{/_SESSION.esSupervisor}}
                        </div>
                    </td>
                </tr>
            {{/arrastre}}
        </table>
    </div>
    <br>
    <!-- End page content -->
</div>
{{> footer}}