{{> header}}
{{> navbar}}
<!-- !PAGE CONTENT! -->
<div class="w3-main w3-container">

    <!-- Header -->
    <div id="portfolio">

        <span class="w3-button w3-hide-large w3-xxlarge w3-hover-text-grey" onclick="w3_open()"><i class="fa fa-bars"></i></span>
        <div class="w3-container w3-center">
            <img src="/tpFinalGrupo13/public/images/logoLema.jpeg" style="width:20%;" class="w3-center w3-round">
            <!-- The form -->
            <div class="w3-section w3-bottombar w3-padding-16">
                <input class="w3-padding w3-light-grey w3-border-blue" style="width: 30%" type="text" id="myInput" onkeyup="myFunction()" placeholder="Buscar Viaje.." name="busqueda">
            </div>
                {{#_SESSION.esAdministrador}}
                    <form action="viaje/altaViaje">
                        <button name="viaje" class="w3-button w3-green">Agregar Viaje</button>
                    </form>
                {{/_SESSION.esAdministrador}}

                {{#_SESSION.esSupervisor}}
                    <form action="viaje/altaViaje">
                        <button name="viaje" class="w3-button w3-green">Agregar Viaje</button>
                    </form>
                {{/_SESSION.esSupervisor}}
                {{#_SESSION.esChofer}}
                    <form action="viaje/altaViaje">
                        <button name="viaje" class="w3-button w3-green">Agregar Viaje</button>
                    </form>
                {{/_SESSION.esChofer}}
            </form>
            <br>
        </div>
    </div>
    <div style="overflow: auto;">
        <table class="w3-table">
            <tr class="w3-black">
                <th>Codigo</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Tiempo Salida</th>
                <th>Tiempo Arribo</th>
                <th>Chofer</th>
                <th>Estado</th>
                <th>Proforma</th>
                <th>Acciones</th>
            </tr>
            {{#viaje}}
                <tr class="w3-border-bottom w3-light-grey">
                    <td>{{IdViaje}}</td>
                    <td>{{DireccionOrigen}}, {{Provincia}}</td>
                    <td>{{DireccionDestino}}, {{Provincia}}</td>
                    <td>{{FechOrig}}</td>
                    <td>{{FechEst}}</td>
                    <td>{{EmpNomb}} {{EmpAp}}</td>
                    <td>{{Estado}}</td>
                    <td>{{IdViaje}}</td>
                    <td>
                        <div>
                            {{#_SESSION.esAdministrador}}
                            <form action="" method="post">
                                <button class='w3-button w3-red' style="width: 100%;" name="modificar" value="{{Id}}">Finalizar Viaje</button>
                            </form>
                            <form action="camion/modificarCamion" method="post">
                                <button class='w3-button w3-blue' style="width: 100%;" name="idCamion" value="{{Id_camion}}">Modificar</button>
                            </form>
                            {{/_SESSION.esAdministrador}}
                            {{#_SESSION.esSupervisor}}
                                <form action="" method="post">
                                    <button class='w3-button w3-red' style="width: 100%;" name="modificar" value="{{Id}}">Finalizar Viaje</button>
                                </form>
                            {{/_SESSION.esSupervisor}}
                            {{#_SESSION.esChofer}}
                                <form action="" method="post">
                                    <button class='w3-button w3-red' style="width: 100%;" name="modificar" value="{{Id}}">Finalizar Viaje</button>
                                </form>
                            {{/_SESSION.esChofer}}
                        </div>
                    </td>
                </tr>
            {{/viaje}}
        </table>
    </div>
    <br>
    <!-- End page content -->
</div>
{{> footer}}